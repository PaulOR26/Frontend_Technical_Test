<form class={{this.styleNamespace}} {{on 'submit' this.addMovie}}>
  <label>
    Title
    <Input
      @type='text'
      @value={{this.title}}
      class='form-title'
      placeholder='Title..'
      required={{true}}
    />
  </label>

  <label>
    Description
    <Input
      @type='text'
      @value={{this.description}}
      class='form-description'
      placeholder='Description..'
      required={{true}}
    />
  </label>

  <label>
    Rating
    <select
      class='form-rating'
      value={{this.rating}}
      onchange={{action 'onSelectRating' value='target.value'}}
    >
      <option value=''></option>
      <option value='5'>5</option>
      <option value='4'>4</option>
      <option value='3'>3</option>
      <option value='2'>2</option>
      <option value='1'>1</option>
    </select>
  </label>

  {{#if this.errorMessage}}
    <div class='error-message'>
      {{this.errorMessage}}
    </div>
  {{/if}}

  <button type='submit'>
    Add Movie
  </button>
</form>