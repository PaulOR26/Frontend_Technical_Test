<form class={{this.styleNamespace}} {{on 'submit' this.addMovie}}>
  <label>
    Title
    <Input
      @type='text'
      @value={{this.title}}
      class='form-title'
      placeholder='Title..'
      required={{true}}
    />
  </label>

  <label>
    Description
    <Input
      @type='text'
      @value={{this.description}}
      class='form-description'
      placeholder='Description..'
      required={{true}}
    />
  </label>

  <label>
    Rating
    <select class='form-rating'>
      <option></option>
      <option>5</option>
      <option>4</option>
      <option>3</option>
      <option>2</option>
      <option>1</option>
    </select>
  </label>

  {{#if this.errorMessage}}
    <div class='error-message'>
      {{this.errorMessage}}
    </div>
  {{/if}}

  <button type='submit'>
    Add Movie
  </button>
</form>