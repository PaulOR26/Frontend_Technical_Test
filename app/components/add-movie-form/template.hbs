<form class={{this.styleNamespace}} {{on 'submit' this.addMovie}}>
  <label id='add-movie-title-label'>
    Title
    <Input
      id='add-movie-title-input'
      @type='text'
      @value={{this.title}}
      class='form-title'
      placeholder='Title..'
      required={{true}}
    />
  </label>

  <label id='add-movie-description-label'>
    Description
    <Input
      id='add-movie-description-input'
      @type='text'
      @value={{this.description}}
      class='form-description'
      placeholder='Description..'
      required={{true}}
    />
  </label>

  <label>
    Rating
    <select
      class='form-rating'
      value={{this.rating}}
      {{on 'change' this.onSelectRating}}
    >
      <option value=''></option>
      <option value='5'>5</option>
      <option value='4'>4</option>
      <option value='3'>3</option>
      <option value='2'>2</option>
      <option value='1'>1</option>
    </select>
  </label>

  {{#if this.errorMessage}}
    <div class='error-message'>
      {{this.errorMessage}}
    </div>
  {{/if}}

  <button type='submit'>
    Add Movie
  </button>
</form>