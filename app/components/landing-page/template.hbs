<div class={{this.styleNamespace}}>
  <MovieListHeader />

  <select
    class='sort-select'
    onchange={{action 'loadMovies' value='target.value'}}
  >
    <option>Sort By Rating</option>
    <option>Ascending</option>
    <option>Descending</option>
  </select>

  <MovieList @loadMovies={{this.loadMovies}} @movies={{this.movies}} />

  <AddMovieForm @loadMovies={{this.loadMovies}} />
</div>