<li class={{this.styleNamespace}}>
  <div class='details'>
    <h2> {{this.movie.title}} </h2>

    <p>
      {{this.movie.description}}
    </p>

    {{#if this.movie.rating}}
      <h3>
        Rating:
        {{this.movie.rating}}/5
      </h3>
    {{/if}}

    <button {{on 'click' this.handleIsEditing}} type='button'>Edit</button>
    <button {{on 'click' this.deleteMovie}} type='button'>Delete</button>
  </div>

  {{#if this.isEditing}}
    <form {{on 'submit' this.editMovie}}>
      <label>
        New title
        <Input
          @type='text'
          @value={{this.newTitle}}
          placeholder='New title..'
          required={{true}}
        />
      </label>
      <label>
        New description
        <Input
          @type='text'
          @value={{this.newDescription}}
          placeholder='New description..'
          required={{true}}
        />
      </label>
      <label>
        New rating
        <select value={{this.newRating}} {{on 'change' this.onSelectNewRating}}>
          <option value=''></option>
          <option value='5'>5</option>
          <option value='4'>4</option>
          <option value='3'>3</option>
          <option value='2'>2</option>
          <option value='1'>1</option>
        </select>
      </label>

      <div>
        <button type='submit'>Submit changes</button>
        <button {{on 'click' this.handleCancelEdit}} type='button'>Cancel
          changes</button>
      </div>
    </form>
  {{/if}}

  {{#if this.errorMessage}}
    <div class='error-message'>
      {{this.errorMessage}}
    </div>
  {{/if}}

</li>