<li class={{this.styleNamespace}}>
  <div class='details'>
    <p> {{this.movie.title}} </p>

    <p>
      {{this.movie.description}}
    </p>

    {{#if this.movie.rating}}
      <p>
        Rating:
        {{this.movie.rating}}/5
      </p>
    {{/if}}

    <button {{action 'handleIsEditing'}}>Edit</button>
  </div>

  {{#if this.isEditing}}
    <form {{on 'submit' this.editMovie}}>
      <label>
        New title
        <Input
          @type='text'
          @value={{this.newTitle}}
          placeholder='New title..'
          required={{true}}
        />
      </label>

      {{#if this.errorMessage}}
        <div class='error-message'>
          {{this.errorMessage}}
        </div>
      {{/if}}

      <button type='submit'>Submit changes</button>
    </form>
  {{/if}}

</li>