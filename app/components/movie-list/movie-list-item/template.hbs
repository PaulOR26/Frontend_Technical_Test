<li class={{this.styleNamespace}}>
  <div class='details'>
    <h2> {{this.movie.title}} </h2>

    <p>
      {{this.movie.description}}
    </p>

    {{#if this.movie.rating}}
      <h3>
        Rating:
        {{this.movie.rating}}/5
      </h3>
    {{/if}}

    <button {{action 'handleIsEditing'}}>Edit</button>
    <button {{action 'deleteMovie'}}>Delete</button>
  </div>

  {{#if this.isEditing}}
    <form {{on 'submit' this.editMovie}}>
      <label>
        New title
        <Input
          @type='text'
          @value={{this.newTitle}}
          placeholder='New title..'
          required={{true}}
        />
      </label>
      <label>
        New description
        <Input
          @type='text'
          @value={{this.newDescription}}
          placeholder='New description..'
          required={{true}}
        />
      </label>
      <label>
        New rating
        <select
          value={{this.newRating}}
          onchange={{action 'onSelectNewRating' value='target.value'}}
        >
          <option value=''></option>
          <option value='5'>5</option>
          <option value='4'>4</option>
          <option value='3'>3</option>
          <option value='2'>2</option>
          <option value='1'>1</option>
        </select>
      </label>

      <div>
        <button type='submit'>Submit changes</button>
        <button type='button' onclick={{action 'handleCancelEdit'}}>Cancel
          changes</button>
      </div>
    </form>
  {{/if}}

  {{#if this.errorMessage}}
    <div class='error-message'>
      {{this.errorMessage}}
    </div>
  {{/if}}

</li>